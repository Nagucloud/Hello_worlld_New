// index.jsp
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
    <title>Welcome Page</title>
    <style>
        body {
            background-color: #f4f4f4;
            text-align: center;
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        h1 {
            color: #333;
        }
        h2 {
            color: #555;
        }
        .image-container {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 20px;
        }
        img {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 200px;
            height: auto;
        }
    </style>
</head>
<body>
    <h1>Welcome to Our Project</h1>
    <h2>Created by: Nagaraja & Shamily</h2>
    <div class="image-container">
        <img src="images/nagaraja.jpg" alt="Nagaraja">
        <img src="images/shamily.jpg" alt="Shamily">
    </div>
</body>
</html>

